generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  
}

model users {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String
  password   String
  lunchId String[]
  breakfastId String[]
  dinnerId  String[]
  lunchDay String
  breakfastDay String
  dinnerDay  String
}


model userRegister {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String
  password   String
  code  String?

}
model product {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  calories    String
  vitamins    String[]
  description String
  img         String
  category  String
}

